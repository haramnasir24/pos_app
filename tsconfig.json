{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Skip type checking of declaration files (.d.ts) for faster builds.
    "strict": true,
    "noEmit": true, // Dont output compiled JS filesâ€”just type-check (Next.js handles the build).
    "esModuleInterop": true, // Allow default imports from modules with no default export.
    "module": "esnext", // Use modern ES module syntax.
    "moduleResolution": "bundler", // Use bundler-style module resolution (good for Next.js).
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true, // Enable faster incremental builds.
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": { // path aliases
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src", "styled-system", "next.config.js"], 
  "exclude": ["node_modules"]
}
